#!/usr/bin/python

# IMPORTS
from mandyfunctions import *
import os
import sys


# VARIABLES
log_path = "../logs/log.txt"

def commandTest(x):
	while True:

		## IF HELP
		if x == 'help':
			showHelp()
			x = 0
			from prompt import *
			promptTwo()

		## ELIF RAM
		elif x == 'ram':
			showFree()
			x = 0
			from prompt import *
			promptTwo()

		## ELIF REMOVEUSER
		elif x == 'removeuser':
			deleteUser()
			x = 0
			from prompt import *
			promptTwo()

		## ELIF MANDYHISTORY
		elif x == 'mandyhistory':
			x = 0
			log_var = open(log_path)
			print log_var.read()

		## ELIF DIRDELETE
		elif x == 'deldir':
			directoryDelete()
			x = 0
			from prompt import *
			promptTwo()

		## ELIF DIRSCAN
		elif x == 'dirscan':
			directoryScan()
			from prompt import *
			promptTwo()

		## ELIF CLEAR
		elif x == 'clear':
			clearFunc()
			x = 0
			from prompt import *
			promptTwo()

		## ELIF EXIT
		elif x == 'exit':
			print
			print "Goodbye :)"
			break
			sys.exit()

		## ELSE
		else:
			print
			break


